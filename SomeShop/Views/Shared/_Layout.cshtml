<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>

<body>

<style>
    .withBorder {
        border: 1px solid black;
        display: inline;
        
    }

    .standartMargin {
        margin: 30px;
    }

    body {
        margin: 20px;
        overflow: hidden;
    }

    .header {
        width: 100%;
        height: 50px;
        margin: 20px 20px 20px 20px;
        background-color: #000000;
    }


    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333333;
    }

    li {
        float: left;
        margin: 5px;
        color: white;
    }

    .withInline {
        display: block;
        max-width:200px
        
    }

    .displayBlock {
        display: block;
    }

    li a {
        display: block;
        color: white;
        text-align: center;
        padding: 16px;
        text-decoration: none;
    }

        li a:hover {
            background-color: #222222;
        }
</style>


    <div class="header ">

        <ul class="ulheader">
            <li class="withInline"> <a href="/Home/Index"> Home</a>  </li>
            <li class="withInline"> <a href="/Home/CreateProduct"> Create Product</a>  </li>
            <li class="withInline"> <a href="/Order/Get"> Order</a>  </li>
        </ul>

    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
